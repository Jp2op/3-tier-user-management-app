pipeline {
    agent any
    
    tools {
        nodejs 'nodejs23'
    }
    
    environment {
        SCANNER_HOME = tool 'sonar-scanner'
    }

    stages {
        stage('GIT Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/Jp2op/3-tier-user-management-app.git'
            }
        }
        
        stage('Frontend Compilation') {
            steps {
                dir('client'){
                    sh 'find . -name "*.js" -exec node --check {} +'
                }
                
            }
        }
        
        stage('Backend Compilation') {
            steps {
                dir('api'){
                    sh 'find . -name "*.js" -exec node --check {} +'
                }
                
            }
        }

        stage('GitLeaks Check') {
            steps {
                sh 'gitleaks detect --source ./client --exit-code 1 || true'
                sh 'gitleaks detect --source ./api --exit-code 1 || true'
            }
        }
        

        stage('SonarQube Analysis') {
            steps {
                withSonarQubeEnv('sonar') {
                sh '''$SCANNER_HOME/bin/sonar-scanner -Dsonar.projectName=NodeJS-Project \
                        -Dsonar.projectKey=NodeJS-Project'''
                }
            }
        }
        
        stage('Quality Gate Check') {
            steps {
                timeout(time: 1, unit: 'HOURS') {
                    waitForQualityGate abortPipeline: false, credentialsId: 'sonar-token'
                }
            }
        }
        
        stage('Trivy FS Scan') {
            steps {
                sh 'trivy fs --format table -o fs-report.html .'
            }
        }
        
        stage('Build, Tag & Push Backend Docker images') {
            steps {
                script {
                    withDockerRegistry(credentialsId: 'docker-cred') {
                        dir('api') {
                            sh 'docker build -t jayyp2op/3-tier-backend:latest .'
                            sh 'trivy image --format table -o backend-image-report.html jayyp2op/3-tier-backend:latest'
                            sh 'docker push jayyp2op/3-tier-backend:latest'
                        }   
                    }
                }
            }
        }
        
        stage('Build, Tag & Push Frontend Docker images') {
            steps {
                script {
                    withDockerRegistry(credentialsId: 'docker-cred') {
                        dir('client') {
                            sh 'docker build -t jayyp2op/3-tier-frontend:latest .'
                            sh 'trivy image --format table -o frontend-image-report.html jayyp2op/3-tier-frontend:latest'
                            sh 'docker push jayyp2op/3-tier-frontend:latest'
                        }   
                    }
                }
            }
        }
        
        stage('K8s-Deploy-prod') {
            steps {
                script {
                    withKubeConfig(caCertificate: '', clusterName: ' jp-cluster', contextName: '', credentialsId: 'k8-prod-token', namespace: 'prod', restrictKubeConfigAccess: false, serverUrl: 'https://34A844A4C9CC235E8952581BDF30BF82.gr7.us-east-1.eks.amazonaws.com') {
                        sh 'kubectl apply -f k8s/sc.yaml -n prod'
                        sleep 20
                        sh 'kubectl apply -f k8s/mysql.yaml -n prod'
                        sh 'kubectl apply -f k8s/backend.yaml -n prod'
                        sh 'kubectl apply -f k8s/frontend.yaml -n prod'
                        sh 'kubectl apply -f k8s/ci.yaml -n prod'
                        sh 'kubectl apply -f k8s/ingress.yaml -n prod'
                        sleep 30
                    }
                }
            }
        }
        
        stage('Deployment Verification') {
            steps {
                script {
                    withKubeConfig(caCertificate: '', clusterName: ' jp-cluster', contextName: '', credentialsId: 'k8-prod-token', namespace: 'prod', restrictKubeConfigAccess: false, serverUrl: 'https://34A844A4C9CC235E8952581BDF30BF82.gr7.us-east-1.eks.amazonaws.com') {
                        sh 'kubectl get pods -n prod'
                        sleep 20
                        sh 'kubectl get ingress -n prod'
                    }
                }
            }
        }
       
       
        
    }
}